<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ReaderActivity">

    <com.example.mybabelreader.utils.views.ToolbarReader
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:translationZ="2dp" />

    <com.example.mybabelreader.utils.views.ReaderView
        android:id="@+id/reader_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="1dp" />

    <com.example.mybabelreader.utils.views.CustomBottomNavSlider
        android:id="@+id/bottombar_reader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:translationZ="2dp" />


</FrameLayout>